<div class="container padding-top-bottom-60">
	<h3 class="center"> <%= @project.Title %> </h3>

	<div class="col-md-8">
		<%= image_tag @project.image, class: "show-project-image" unless @project.image.nil? %>
	</div>


	<div class="col-md-8">
		<p>
		  <strong>Description:</strong>
		  <%= @project.Description %>
		</p>


		<% if (@project.youtube_url != nil) %>
			<div class="youtube-video">
			  <iframe src=<%= @project.youtube_url %> allowfullscreen="true">
			  </iframe>
			</div>
		<% end %>

		<% if (@project.github_url != nil) %>
			<%= @project.github_url %>
		<% end %>
	</div>

	<% if logged_in? (:admin) %>
		<%= link_to 'Edit', edit_project_path(@project), class: "btn btn-orange border-none btn-rounded-corner" %> |
	<% end %>
	<%= link_to 'Back', projects_path, class: "btn btn-white border-none btn-rounded-corner"%>
</div>