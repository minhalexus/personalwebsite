<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :Title,  class: "form-control", placeholder:"Title" %>
  </div>

  <div class="form-group">
    <%= form.text_area :Description,  class: "form-control", placeholder:"Description", rows:"7" %>
  </div>

  <div class="form-group">
    <%= form.text_area :youtube_url,  class: "form-control", placeholder:"Youtube Url" %>
  </div>

  <div class="form-group">
    <%= form.text_area :github_url,  class: "form-control", placeholder:"Github Url, eg: https://www.gitub.com" %>
  </div>

  <div class="form-group">
    <%= form.select(:language_id, options_from_collection_for_select(Language.all.order(:name), :id, :name), {}, {class: "form-control"}) %>
  </div>

  <div class="actions">
    <%= form.submit "Add Project", class: "btn btn-orange border-none btn-rounded-corner width-70" %>
  </div>
<% end %>
