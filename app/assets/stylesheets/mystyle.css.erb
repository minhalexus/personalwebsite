.youtube-video {
  width: 100%;
  height: 0;
  position: relative;
  padding-top: 56%; /* 9 / 16 * 100 */
  margin-bottom: 30px;
  margin-top: 30px;
}
.youtube-video > iframe {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border: 0;
}


